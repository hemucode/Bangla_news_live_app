<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="?attr/colorPrimary">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#2196F3"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:text="@string/home"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_home"
                    android:drawableTint="@color/white"
                    android:textColor="@color/white"
                    style="@style/Widget.AppCompat.Button.Colored"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />


                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#E91E63"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:text="@string/privacy_policy"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_policy"
                    android:drawableTint="@color/white"
                    android:textColor="@color/white"
                    style="@style/Widget.AppCompat.Button.Colored"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />


            </LinearLayout>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#F44336"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:text="@string/containing_information"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_category"
                android:drawableTint="@color/white"
                android:textColor="@color/white"
                style="@style/Widget.AppCompat.Button.Colored"
                tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#9C27B0"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
                    android:text="@string/disclaimer"
                    android:drawableStart="@drawable/report_gmailerrorred"
                    android:drawableTint="@color/white"
                    android:textColor="@color/white"
                    style="@style/Widget.AppCompat.Button.Colored"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />


                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#3F51B5"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
                    android:text="@string/share"
                    android:drawableStart="@drawable/ic__share"
                    android:drawableTint="@color/white"
                    android:textColor="@color/white"
                    style="@style/Widget.AppCompat.Button.Colored"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#009688"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:text="@string/rate"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_review"
                    android:drawableTint="@color/white"
                    android:textColor="@color/white"
                    style="@style/Widget.AppCompat.Button.Colored"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#4CAF50"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:text="@string/more_app"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/baseline_apps_24"
                    android:drawableTint="@color/white"
                    android:textColor="@color/white"
                    style="@style/Widget.AppCompat.Button.Colored"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#3048BF"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
                    android:text="@string/about_app"
                    android:drawableStart="@drawable/ic_info"
                    android:drawableTint="@color/white"
                    android:textColor="@color/white"
                    style="@style/Widget.AppCompat.Button.Colored"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />


                <Button
                    android:id="@+id/button9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#EC188D"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:text="@string/website"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/baseline_language"
                    android:drawableTint="@color/white"
                    android:textColor="@color/white"
                    style="@style/Widget.AppCompat.Button.Colored"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#0076D5"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
                    android:text="@string/facebook"
                    android:drawableStart="@drawable/ic_account_box"
                    android:drawableTint="@color/white"
                    android:textColor="@color/white"
                    style="@style/Widget.AppCompat.Button.Colored"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />


                <Button
                    android:id="@+id/button11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#F10E16"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:text="@string/youtube"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_video"
                    android:drawableTint="@color/white"
                    android:textColor="@color/white"
                    style="@style/Widget.AppCompat.Button.Colored"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#B64102"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
                    android:text="Newspaper"
                    android:drawableStart="@drawable/ic_newspaper"
                    android:drawableTint="@color/white"
                    android:textColor="@color/white"
                    style="@style/Widget.AppCompat.Button.Colored"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />


                <Button
                    android:id="@+id/button13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#673AB7"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:text="English news"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_motion_video"
                    android:drawableTint="@color/white"
                    android:textColor="@color/white"
                    style="@style/Widget.AppCompat.Button.Colored"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />

            </LinearLayout>



        </LinearLayout>






    </androidx.core.widget.NestedScrollView>




</LinearLayout>